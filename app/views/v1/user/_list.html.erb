<div class="page-header"><h1><%=@menu_title%></h1></div>

<div class="panel panel-default">
  <div class="panel-body">
    <div align="right">
      <a href="/user/add"><button class="btn btn-success" type="button">+ Add</button></a>
    </div>
    <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
    <% end %>
    <br>
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="basic-datatable">
      <thead>
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Create Date</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <%
        i = 0
        @data_user.each do |data|
        i=i+1
        class_name = ((i%2) == 0) ? 'odd gradeX' : 'odd gradeC'
      %>
      <tr class="<%=class_name%>">
        <td><%=i%></td>
        <td><%=data.username%></td>
        <td><%=data.email%></td>
        <td><%=data.firstname%></td>
        <td><%=data.lastname%></td>
        <td><%=data.created_at%></td>
        <td>
          <a href="<%=request.base_url%>/user/edit/<%=data.id%>"><i class="fa fa-edit"></i><a/>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>


    <table width="100%">
      <tr>
        <td align="right"><%= paginate @data_user %></td>
      </tr>
    </table>

  </div>
</div>